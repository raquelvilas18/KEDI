<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_announcements"
        android:name="com.example.kedi.ui.announcements.AnnouncementsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_announcements" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.kedi.ui.petfunding.PetfundingFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_petfunding" />

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.example.kedi.ui.create.CreateFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_create" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.kedi.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>